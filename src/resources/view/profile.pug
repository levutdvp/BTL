extends main 
block content

    section(style='background-color: #eee;')
        .container.py-5
            .row
                .col
                    nav.bg-light.rounded-3.p-3.mb-4(aria-label='breadcrumb')
                        ol.breadcrumb.mb-0
                            li.breadcrumb-item
                                a(href='/') Home
                            li.breadcrumb-item
                                a(href='/user') User
                            
            .row
                .col-lg-4
                    .card.mb-4
                        .card-body.text-center
                            img.rounded-circle.img-fluid(src=`${user.img||user.photos[0].value}` alt='avatar' style='width: 150px;')
                            h5.my-3=user.username
                            //- p.text-muted.mb-1 Full Stack Developer
                            //- p.text-muted.mb-4 Bay Area, San Francisco, CA
                            .d-flex.justify-content-center.mb-2
                                button.btn.btn-primary(type='button') Follow
                                button.btn.btn-outline-primary.ms-1(type='button') Message
                    .card.mb-4.mb-lg-0
                        .card-body.p-0
                            ul.list-group.list-group-flush.rounded-3
                                a.menu_hover(href="/user") 
                                    li.list-group-item.d-flex.justify-content-between.align-items-center.p-3
                                        i.fas.fa-globe.fa-lg.text-warning
                                        p.mb-0 Dash Board
                                a.menu_hover(href="") 
                                    li.list-group-item.d-flex.justify-content-between.align-items-center.p-3
                                        i.fab.fa-github.fa-lg(style='color: #333333;')
                                        p.mb-0 Profile
                                a.menu_hover(href="") 
                                    li.list-group-item.d-flex.justify-content-between.align-items-center.p-3
                                        i.fab.fa-twitter.fa-lg(style='color: #55acee;')
                                        p.mb-0 Information
                                a.menu_hover(href="") 
                                    li.list-group-item.d-flex.justify-content-between.align-items-center.p-3
                                        i.fab.fa-instagram.fa-lg(style='color: #ac2bac;')
                                        p.mb-0 mdbootstrap
                                a.menu_hover(href="") 
                                    li.list-group-item.d-flex.justify-content-between.align-items-center.p-3
                                        i.fab.fa-facebook-f.fa-lg(style='color: #3b5998;')
                                        p.mb-0 mdbootstrap
                .col-lg-8
                    .card.mb-4
                        .card-body
                            form(action="") 
                                .row
                                    .col-sm-3
                                        p.mb-0 Full Name
                                    .col-sm-9
                                        input#PROFILE_USER_NAME(type="text" name="username" value=`${user.username || user.displayName}`)
                                hr
                                .row
                                    .col-sm-3
                                        p.mb-0 Email
                                    .col-sm-9
                                        input#PROFILE_USER_EMAIL(type="text" name="email" value=`${user.email || user.emails[0].value}`)
                                hr
                                .row
                                    .col-sm-3
                                        p.mb-0 Phone
                                    .col-sm-9
                                        input#PROFILE_USER_PHONE(type="text" value=``)
                                hr
                                .row
                                    .col-sm-3
                                        p.mb-0 Mobile
                                    .col-sm-9
                                        input(type="text" value=``)
                                hr
                                .row
                                    .col-sm-3
                                        p.mb-0 Address
                                    .col-sm-9
                                        input(name="" type="text" value=``)
                                        input#PROFILE_USER_ID.hiddlen_notifications(type="text" value=`${user.id}`)
                                hr
                                Button#BTN_UPDATE_USER(type="submit") Update

                            #MESSAGE_ERROR.alert.alert-danger.hiddlen_notifications
                                strong Error
                                    |  Lỗi ! thông tin đăng nhập 
                                    strong=user.provider 
                                    |  không được sửa
                            #MESSAGE_SUCCESS.alert.alert-success.success_message_notifications
                                strong Success
                                    |  Sửa thông tin thành công
                    .row
                        .col-md-6
                            .card.mb-4.mb-md-0
                                .card-body
                                    p.mb-4
                                        span.text-primary.font-italic.me-1 assigment
                                        |  Project Status
                                    p.mb-1(style='font-size: .77rem;') Web Design
                                    .progress.rounded(style='height: 5px;')
                                        .progress-bar(role='progressbar' style='width: 80%' aria-valuenow='80' aria-valuemin='0' aria-valuemax='100')
                                    p.mt-4.mb-1(style='font-size: .77rem;') Website Markup
                                    .progress.rounded(style='height: 5px;')
                                        .progress-bar(role='progressbar' style='width: 72%' aria-valuenow='72' aria-valuemin='0' aria-valuemax='100')
                                    p.mt-4.mb-1(style='font-size: .77rem;') One Page
                                    .progress.rounded(style='height: 5px;')
                                        .progress-bar(role='progressbar' style='width: 89%' aria-valuenow='89' aria-valuemin='0' aria-valuemax='100')
                                    p.mt-4.mb-1(style='font-size: .77rem;') Mobile Template
                                    .progress.rounded(style='height: 5px;')
                                        .progress-bar(role='progressbar' style='width: 55%' aria-valuenow='55' aria-valuemin='0' aria-valuemax='100')
                                    p.mt-4.mb-1(style='font-size: .77rem;') Backend API
