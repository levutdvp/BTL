extends main 
block content
    section.h-100.gradient-custom
        .container.py-5.h-100
            .row.d-flex.justify-content-center.align-items-center.h-100
                .col-12.col-md-8.col-lg-6.col-xl-5
                    .card.bg-dark.text-white(style='border-radius: 1rem;')
                        .card-body.p-5.text-center
                            .mb-md-5.mt-md-4.pb-5
                                h2.fw-bold.mb-2.text-uppercase SIGN UP
                                p.text-white-50.mb-5 Please fill in your information to register your account!
                                .form-outline.form-white.mb-4
                                    input#typeEmailX.form-control.form-control-lg(name='email' type='email',placeholder="Email")
                                    label.form-label(for='typeEmailX') Email
                                .form-outline.form-white.mb-4
                                    input#typeUserNameX.form-control.form-control-lg(name='username' type='text',placeholder="User Name")
                                    label.form-label(for='username') User Name
                                .form-outline.form-white.mb-4
                                    input#typePasswordX.form-control.form-control-lg(name='password' type='password',placeholder="Password")
                                    label.form-label(for='password') Password
                                .form-outline.form-white.mb-4
                                    input#typeConfirmPasswordX.form-control.form-control-lg(name='confirmpassword' type='password',placeholder="Confirm Password")
                                    label.form-label(for='confirmpassword') Confirm password
                                .form-outline.form-white.mb-4
                                    input#typePhoneNumberX.form-control.form-control-lg(name='phoneNumber' type='text',placeholder="Phone Number")
                                    label.form-label(for='phonenumber') Phone Number
                                p.small.mb-5.pb-lg-2
                                    a.text-white-50(href='#!') Forgot password?
                                button#BTN_SIGN_UP.btn.btn-outline-light.btn-lg.px-5(type='submit') Sign Up
                                .d-flex.justify-content-center.text-center.mt-4.pt-1
                                    a.text-white(href='/auth/facebook/')
                                        i.fab.fa-facebook-f.fa-lg
                                    a.text-white(href='/auth/github/')
                                        i.fab.fa-github.fa-lg.mx-4.px-2
                                    a.text-white(href='/auth/google/')
                                        i.fab.fa-google.fa-lg
                            div
                                p.mb-0
                                    | Don't have an account? 
                                    a.text-white-50.fw-bold(href='/login') Login
